<script type="text/template" id="item-template">
  <a class="listbutton checkitem">
    <span class="label"><%= quantity %> x <%= name %><% if (price!=0) { %> for <% print(parseFloat(price).toFixed(2)); %><% } %></span>
  </a><a class="listbutton last edititem">
    <span class="darrow">edit</span>
  </a>

  <div class="hidden editFields" >
    <div class="fieldcontain">
      <label for="list-item-input-<%= id %>">Item:</label>
      <input class="item-name-input item-input-field" id="list-item-input-<%= id %>" type="text" value="<%= _.escape(name) %>" _default="<%= _.escape(name) %>" />
    </div>
    <div class="fieldcontain">
      <label for="list-qty-input-<%= id %>">Quantity:</label>
      <input class="item-qty-input item-input-field" id="list-qty-input-<%= id %>" type="number" value="<%= _.escape(quantity) %>" _default="1" />
    </div>
    <div class="fieldcontain">
      <label for="list-price-input-<%= id %>">Price:</label>
      <input class="item-price-input item-input-field" id="list-price-input-<%= id %>" type="number" value="<% print(parseFloat(price).toFixed(2)); %>" _default="<% print(parseFloat(price).toFixed(2)); %>" />
    </div>
    <div>
      <input type="button" class="button first item-save-confirm item-change-button" value="save">
      <input type="button" class="button last item-delete-confirm item-change-button last" value="delete">
    </div>
  </div>

</script>
<script type="text/template" id="homelist-template">
  <li><a class="dellist listbutton first"><span _link="<%= link %>" class="dellist label">del</span></a><a href="#list/<%= link %>" class="checkitem listbutton last"><span class="label listname"><%= name %></span><span class="rarrow">&raquo</span></a></li>
</script>


